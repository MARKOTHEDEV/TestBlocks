{
  "manifest_version": 3,
  "name": "QA Test Builder",
  "version": "1.0.0",
  "description": "Chrome extension for QA test element picking",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "QA Test Builder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["qa-tagger.v1.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
